<h1>Classifieds</h1>

<section>
  <% @classifieds.each do |classified| %>
  <article class="well well-lg">
    <h2><<%= classified.title %></h2>
    <p><%= classified.description %>

    <div><<%= "$#{classified.price}" %></div>
    <div><%= classified.category.name %></div>
  </article>
  <%end%>
</section>

<section class="col-md-4">
  <article class="panel panel-primary">
    <div class="panel panel-heading">
      categories
    </div>
  <ul class="well well-lg">
  <% @categories.each do |category| %>
  <l1><h3><%= category.name %></h3></l1>
  <% end %>
</ul>
</article>
</section>
